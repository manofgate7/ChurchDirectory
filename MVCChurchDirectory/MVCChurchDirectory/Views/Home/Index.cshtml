@model IEnumerable<MVCChurchDirectory.ViewModels.HomePersonViewModel>
@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    @using (Html.BeginForm("Index", "Home", FormMethod.Get))
    {
        @Html.TextBox("Search");<input type="submit" value="Search" />
    }
    <table class="table left">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Picture</th>
                <th>Church Job</th>
            </tr>
        </thead>
        @foreach (var person in Model)
        {
            <tr id="personRow" onclick="GetPersonDetails(@person.personID)">
                <td>@person.FirstName</td>
                <td>@person.LastName</td>
                <td>@person.Email</td>
                <td>@person.PhoneNumber</td>
                <td>@person.Picture</td>
                <td>@person.Category</td>
            </tr>
        }
    </table>
    <div id="DisplayPerson" class="right col-lg-offset-8"> </div>

</div>

@section Scripts {
    <script type="text/javascript">
        var GetPersonDetails = function (personID) {
            var url = "/Home/GetPerson?id=" + personID;
            $("#DisplayPerson").load(url);
        };
    </script>


}